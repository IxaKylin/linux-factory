ifeq ($(CHILD),true)
ifneq ($(CHILD_SPELLCHECK_READY),true)
CHILD_SPELLCHECK_READY = true
.PHONY: child_spellcheck child_+spellcheck child__spellcheck child_~spellcheck
child_spellcheck: child__spellcheck child_~spellcheck
child_~spellcheck: | $(CHECK) child_~format $(SPELLCHECK_DEPS) $(SPELLCHECK_TARGET) $(ACTION)/spellcheck
child_+spellcheck: | $(CHECK) child__spellcheck $(SPELLCHECK_DEPS) $(SPELLCHECK_TARGET) $(ACTION)/spellcheck
child__spellcheck:
	@touch -m $(DONE)/+spellcheck
	@$(call clear_cache,$(DONE)/_spellcheck)
	@$(call clear_cache,$(DONE)/spellcheck)
$(DONE)/_spellcheck/*: %
	@$(call clear_cache,$(DONE)/spellcheck)
	@$(call add_dep,spellcheck,$<)
	@$(call cache,$@)
endif
else
ifneq ($(SPELLCHECK_READY),true)
SPELLCHECK_READY = true
.PHONY: spellcheck +spellcheck _spellcheck ~spellcheck
spellcheck: _spellcheck ~spellcheck
~spellcheck: | $(CHECK) ~format $(SPELLCHECK_DEPS) $(SPELLCHECK_TARGET) $(ACTION)/spellcheck
+spellcheck: | $(CHECK) _spellcheck $(SPELLCHECK_DEPS) $(SPELLCHECK_TARGET) $(ACTION)/spellcheck
_spellcheck:
	@touch -m $(DONE)/+spellcheck
	@$(call clear_cache,$(DONE)/_spellcheck)
	@$(call clear_cache,$(DONE)/spellcheck)
$(DONE)/_spellcheck/*: %
	@$(call clear_cache,$(DONE)/spellcheck)
	@$(call add_dep,spellcheck,$<)
	@$(call cache,$@)
endif
endif
