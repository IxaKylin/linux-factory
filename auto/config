#!/bin/sh

export NAME="Jam OS"
export WEBSITE="https://clayrisser.com"
export EMAIL="email@clayrisser.com"
export ARCH="i386"
export DISTRIBUTION="buster"
export KERNEL_VERSION="5.10.0-0.bpo.3"
export KEYBOARD_LAYOUT="us"
export LOCAL="en_US"
export MIRROR="http://deb.debian.org/debian/"
export MIRROR_SECURITY="http://security.debian.org/"

export _ARCHITECTURES="$ARCH"
export _LINUX_FLAVOURS="$ARCH"
if [ "$ARCH" == "i386" ]; then
    export _LINUX_FLAVOURS="686-pae"
fi

lb config noauto \
    --apt apt \
    --apt-indices true \
    --apt-options "-y" \
    --apt-recommends true \
    --apt-source-archives true \
    --architectures "$_ARCHITECTURES" \
    --archive-areas "main contrib non-free" \
    --backports true \
    --binary-images iso-hybrid \
    --bootappend-live "boot=live components locales=$LOCAL.UTF-8 keyboard-layouts=$KEYBOARD_LAYOUT" \
    --cache true \
    --checksums sha256 \
    --debian-installer live \
    --debian-installer-gui true \
    --debootstrap-options "--include=apt-transport-https,ca-certificates,openssl" \
    --debug \
    --distribution "$DISTRIBUTION" \
    --initsystem systemd \
    --iso-application "$NAME" \
    --iso-publisher "$NAME; $WEBSITE; $EMAIL" \
    --iso-volume "$NAME" \
    --linux-flavours "$_LINUX_FLAVOURS" \
    --linux-packages "linux-image-$KERNEL_VERSION linux-headers-$KERNEL_VERSION" \
    --mirror-bootstrap "$MIRROR" \
    --mirror-debian-installer "$MIRROR" \
    --mode debian \
    --parent-debian-installer-distribution "$DISTRIBUTION" \
    --parent-distribution "$DISTRIBUTION" \
    --parent-mirror-chroot "$MIRROR" \
    --parent-mirror-chroot-security "$MIRROR_SECURITY" \
    --security true \
    --system normal \
    --updates true \
    --win32-loader true \
    "${@}"
