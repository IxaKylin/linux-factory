#!/bin/sh

mkdir -p /var/log/install
exec > /var/log/install/di-early-command.log 2>&1
[ -f /root/install/.envs ] && export $(cat /root/install/.envs | grep -v '#') || true

echo hello
echo world >&2

chmod +x /usr/local/bin/prompt
chmod +x /usr/local/bin/response

export DEBIAN_FRONTEND=dialog
export TERM=linux
export NCURSES_NO_UTF8_ACS=1
printf "\ec"

prompt /root/install/prompt.templates

if ! chvt 1 &>/dev/null; then
    break
fi
